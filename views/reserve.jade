extends layout

block content
  section.reserve
    .dialog
      form.ui-component(action="/reserve" method="post")
        input(type="hidden" name="spaceId" id="spaceId" value="#{params.spaceId}")
        input(type="hidden" name="year" id="year" value="#{params.year}")
        input(type="hidden" name="month" id="month" value="#{params.month}")
        input(type="hidden" name="day" id="day" value="#{params.day}")
        input(type="hidden" name="periodnum" id="periodnum" value="#{params.periodnum}")
        .block.office #{params.officename}
        .block.space #{params.spacename}
        .block.date
          .head 予約日
          .body #{params.year} 年 #{params.month} 月 #{params.day} 日 #{params.periodname} （#{params.dayofweekstring}）
        .guestname.ui-block
          label.ui-component(for="guestname") お名前
            if message.guestname
              span.message.caution #{message.guestname}
          input.ui-component(type="text" name="guestname" id="guestname" placeholder="guestname")
        .mainaddress.ui-block
          label.ui-component(for="mainaddress") メールアドレス
            if message.mainaddress
              span.message.caution #{message.mainaddress}
          input.ui-component(type="text" name="mainaddress" id="mainaddress" placeholder="mainaddress")
        div.ui-block
          button.ui-component(type="submit") 予約
