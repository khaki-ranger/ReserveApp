extends layout

block content
  section.reserve
    .dialog
      form.ui-component(action="/reserve" method="post")
        div.guestname.ui-block
          label.ui-component(for="guestname") お名前
            if message.guestname
              span.message.caution #{message.guestname}
          input.ui-component(type="text" name="guestname" id="guestname" placeholder="guestname")
        div.mainaddress.ui-block
          label.ui-component(for="mainaddress") メールアドレス
            if message.mainaddress
              span.message.caution #{message.mainaddress}
          input.ui-component(type="text" name="mainaddress" id="mainaddress" placeholder="mainaddress")
        div.ui-block
          button.ui-component(type="submit" disabled) 予約
