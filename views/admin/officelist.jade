extends ../layout

block content
  section.breadcrumbs
    .container
      a(href="/") トップページ
      span.hyphen &rang;
      a(href="/admin") 管理者メニュー
      span.hyphen &rang;
      span オフィス一覧
  section.admin-list
    .container
      .head-component
        h1 OfficeList
          span オフィス一覧
    .container
      table
        thead
          tr
            th No
            th 画像
            th 名前
            th 作成日時
            th 操作
        tbody
          each office, index in offices
            tr
              td.num #{index + 1}
              td.image
                img.responsive-img(src="#{office.imgPath}")
              td.name #{office.officename}
              td.createdAt #{office.formattedCreatedAt}
              td.action
                .flex-container
                  a.ui-component.update(href="/admin/office/update/#{office.officeId}") 編集
                  a.ui-component.delete.confirmation(href="/admin/office/delete/#{office.officeId}") 削除
