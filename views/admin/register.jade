extends ../layout

block content
  section.register
    .dialog
      form.ui-component(action="/admin/user/register" method="post")
        div.userid.ui-block
          label.ui-component(for="username") ユーザーネーム
            if message.username
              span.message.caution #{message.username}
          input.ui-component(type="text" name="username" id="username" placeholder="username")
        div.password.ui-block
          label.ui-component(for="password") パスワード
            if message.password
              span.message.caution #{message.password}
          input.ui-component(type="password" name="password" id="password" placeholder="password")
        div.role.ui-block
          label.ui-component(for="role") 権限
          select.ui-component(name="role" id="role")
            each role in roles
              option(value="#{role.num}") #{role.name}
        div.ui-block
          button.ui-component(type="submit") 登録
